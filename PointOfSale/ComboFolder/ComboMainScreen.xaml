<UserControl x:Class="PointOfSale.ComboFolder.ComboMainScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.ComboFolder"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Button Grid.Column="0" Grid.Row="0" FontSize="40" FontWeight="Black" Click="EntreeClick">Add Entree</Button>
        <Button Grid.Column="0" Grid.Row="1" FontSize="40" FontWeight="Black" Click="SideClick">Add Side</Button>
        <Button Grid.Column="0" Grid.Row="2" FontSize="40" FontWeight="Black" Click="DrinkiClick">Add Drink</Button>
        <Button Grid.Column="0" Grid.Row="3" FontSize="40" FontWeight="Black" Click="CancelClick">Cancel Order</Button>
        <Button Grid.Column="0" Grid.Row="4" FontSize="40" FontWeight="Black" Click="MenuClick">Main Menu</Button>
    </Grid>
</UserControl>
