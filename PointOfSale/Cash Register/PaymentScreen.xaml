<UserControl x:Class="PointOfSale.Cash_Register.PaymentScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Cash_Register"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Button Grid.Row="0" Click="CreditCardClick" FontSize="50" FontWeight="Bold">Credit/Debit</Button>
        <Button Grid.Row="1" Click="CashClick" FontSize="50" FontWeight="Bold">Cash</Button>
        <Button Grid.Row="2" Click="GoBackClick" FontSize="50" FontWeight="Bold">Go Back</Button>
    </Grid>

   
</UserControl>
