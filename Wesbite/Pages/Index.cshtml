@page

@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<form id="Menu-Stuff">


    <div id="search">
        <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
        <input type="submit" value="SearchTerms" />
    </div>


    <div id="filters">

        <h4>Menu Item Types</h4>
        <label>
            <input type="checkbox" name="MenuType" value="Entrees" checked="@Model.MenuType.Contains("Entrees")" />
            Entrees
        </label>
        <label>
            <input type="checkbox" name="MenuType" value="Sides" checked="@Model.MenuType.Contains("Sides")" />
            Sides
        </label>
        <label>
            <input type="checkbox" name="MenuType" value="Drinks" checked="@Model.MenuType.Contains("Drinks")" />
            Drinks
        </label>

        <h4>Calories</h4>
        <div>
            Between
            <input name="CalMin" type="number" min="0" max="2000" step="1" placeholder="min" value="@Model.CalMin" />
            and
            <input name="CalMax" type="number" min="0" max="2000" step="1" placeholder="min" value="@Model.CalMax" />
        </div>

        <h4>Price</h4>
        <div>
            Between
            <input name="PriceMin" type="number" min="0" max="20" step=".1" placeholder="min" value="@Model.PriceMin" />
            and
            <input name="PriceMax" type="number" min="0" max="20" step=".1" placeholder="min" value="@Model.PriceMax" />
        </div>
    </div>
</form>

    <div id="results">
        <h1>Welcome to Bleakwind Buffet</h1>

        <p>
            We at Bleakwind Buffet are proud to bring you authentic fantasy meals straight from the world of Skyrim. Shake the blood off your sword and sake your thirst with one of our old-fashioned sailor sodas. Hack into a Smokehouse Skeleton with your dagger. Or vanquish the the mighty Thalmor Triple Burger! You’ve had a hard adventure and earned your loot, so spend it with us!
        </p>
        <div id="menu">


            <h2 id="MenuItem">Entrees</h2>
            <div>
                @foreach (BleakwindBuffet.Data.IOrderItem item in Model.MenuItems)
                {
                    if (item is BleakwindBuffet.Data.Entrees.Entree)
                    {

                        <div id="Item">@item.ToString()</div>
                        <div id="Item">Price: $@item.Price</div>
                        <div id="Item">Calories: @item.Calories</div>
                        <p>@item.Description</p>
                    }

                }
            </div>

            <h2 id="MenuItem">Sides</h2>
            <div>
                @foreach (BleakwindBuffet.Data.IOrderItem item in Model.MenuItems)
                {
                    if (item is BleakwindBuffet.Data.Sides.Side)
                    {
                        <div id="Item2">@item.ToString()</div>
                        <div id="Item2">Price: $@item.Price</div>
                        <div id="Item2">Calories :@item.Calories</div>
                        <p>@item.Description</p>
                    }
                }
            </div>

            <h2 id="MenuItem">Drinks</h2>
            <div>
                @foreach (BleakwindBuffet.Data.IOrderItem item in Model.MenuItems)
                {
                    if (item is BleakwindBuffet.Data.Drinks.Drink)
                    {
                        <div id="Item3">@item.ToString()</div>
                        <div id="Item3">Price: $@item.Price</div>
                        <div id="Item3">Calories: @item.Calories</div>
                        <p>@item.Description</p>
                    }
                }
            </div>
        </div>
    </div>


